    grid.innerHTML='';
    if(!arr || arr.length===0){
      const empty = document.createElement('div');
      empty.className='card';
      empty.style.textAlign='center';
      empty.style.padding='1.25rem';
      empty.innerHTML = '<div class="title">Hen√ºz ilan yok</div><div class="subtitle">Yeni ilanlar eklendiƒüinde burada g√∂r√ºnecek.</div>';
      grid.appendChild(empty);
      return;
    }
    arr.forEach((x,idx)=>{
      const el=document.createElement('a');
      el.href=`/ilan/${x.id}`;
      el.className='item';
      el.style.order = String(9999-idx); // yeni en √∂nde
      el.innerHTML=`<div class="thumb"></div>
        <div class="meta">
          ${prem?'<span class="badge gold">‚≠ê Vitrin</span>':''}
          <div style="margin-top:.35rem;font-weight:700">${x.t}</div>
          <div style="display:flex;gap:.5rem;align-items:center;color:#9ca3af;margin-top:.25rem">
            <span>${x.price}</span> ‚Ä¢ <span>${x.ago}</span>
          </div>
        </div>`;
      grid.appendChild(el);
    })
  }
