/* ====== ÜRETEN ELLER – Standalone CSS (Tailwind yok) ====== */
/* Renk değişkenleri */
:root{
  --bg: #faf9f7;
  --text: #111827;
  --muted: #6b7280;
  --border: #e5e7eb;
  --card: #ffffff;
  --amber-50:#fffbeb;
  --amber-100:#fef3c7;
  --amber-300:#fcd34d;
  --amber-600:#d97706;
  --amber-700:#b45309;
  --yellow-500:#eab308;
  --green-50:#ecfdf5;
  --green-100:#d1fae5;
  --green-700:#047857;
  --red-600:#dc2626;
  --gray-50:#f9fafb;
  --gray-100:#f3f4f6;
  --gray-200:#e5e7eb;
  --gray-300:#d1d5db;
  --gray-400:#9ca3af;
  --gray-500:#6b7280;
  --gray-600:#4b5563;
  --gray-700:#374151;
  --gray-800:#1f2937;
  --black: #000;
  --white: #fff;
}

/* Genel reset */
*{box-sizing:border-box}
html,body{margin:0;padding:0}
body{background:var(--bg);color:var(--text);font:400 16px/1.5 system-ui, -apple-system, Segoe UI, Roboto, Arial, Helvetica, sans-serif}

/* Linkler */
a{color:inherit;text-decoration:none}
a:hover{opacity:.9}

/* Utility benzeri sınıflar (JSX’te kullanılanlar) */
.min-h-screen{min-height:100vh}
.grid{display:grid}
.place-items-center{place-items:center}
.text-center{text-align:center}
.text-right{text-align:right}
.text-gray-100{color:var(--gray-100)}
.text-gray-400{color:var(--gray-400)}
.text-gray-500{color:var(--gray-500)}
.text-gray-600{color:var(--gray-600)}
.text-gray-700{color:var(--gray-700)}
.text-amber-700{color:var(--amber-700)}
.text-sm{font-size:.875rem}
.text-lg{font-size:1.125rem}
.text-2xl{font-size:1.5rem}
.font-medium{font-weight:500}
.font-semibold{font-weight:600}
.font-bold{font-weight:700}
.whitespace-pre-line{white-space:pre-line}
.truncate,.line-clamp-1{overflow:hidden;text-overflow:ellipsis;white-space:nowrap}
.rounded-md{border-radius:.375rem}
.rounded-lg{border-radius:.5rem}
.rounded-xl{border-radius:.75rem}
.rounded-2xl{border-radius:1rem}
.rounded-full{border-radius:9999px}
.border{border:1px solid var(--border)}
.border-b{border-bottom:1px solid var(--border)}
.border-t{border-top:1px solid var(--border)}
.border-gray-300{border-color:var(--gray-300)}
.border-amber-300{border-color:var(--amber-300)}
.bg-white{background:var(--white)}
.bg-black{background:var(--black)}
.bg-gray-50{background:var(--gray-50)}
.bg-gray-100{background:var(--gray-100)}
.bg-amber-600{background:var(--amber-600)}
.bg-amber-100{background:var(--amber-100)}
.text-yellow-800{color:#854d0e}
.text-emerald-800{color:#065f46}
.text-emerald-700{color:#047857}
.shadow-sm{box-shadow:0 1px 2px rgba(0,0,0,.06)}
.shadow-xl{box-shadow:0 10px 15px rgba(0,0,0,.1),0 4px 6px rgba(0,0,0,.05)}
.p-1{padding:.25rem}
.p-2{padding:.5rem}
.p-3{padding:.75rem}
.p-4{padding:1rem}
.p-5{padding:1.25rem}
.py-2{padding:.5rem 0}
.py-3{padding:.75rem 0}
.py-6{padding:1.5rem 0}
.px-1{padding:0 .25rem}
.px-3{padding:0 .75rem}
.px-4{padding:0 1rem}
.px-6{padding:0 1.5rem}
.mt-0_5{margin-top:.125rem}
.mt-1{margin-top:.25rem}
.mt-2{margin-top:.5rem}
.mt-3{margin-top:.75rem}
.mt-4{margin-top:1rem}
.mt-6{margin-top:1.5rem}
.mb-2{margin-bottom:.5rem}
.gap-2{gap:.5rem}
.gap-3{gap:.75rem}
.gap-4{gap:1rem}
.gap-6{gap:1.5rem}
.flex{display:flex}
.items-center{align-items:center}
.items-start{align-items:flex-start}
.justify-between{justify-content:space-between}
.justify-center{justify-content:center}
.flex-1{flex:1}
.shrink-0{flex-shrink:0}
.hidden{display:none}
.block{display:block}

/* Responsive container ve gridler */
.max-w-7xl{max-width:80rem;margin-left:auto;margin-right:auto}
.mx-auto{margin-left:auto;margin-right:auto}
.px-4{padding-left:1rem;padding-right:1rem}
.py-6{padding-top:1.5rem;padding-bottom:1.5rem}
.grid-cols-2{grid-template-columns:repeat(2,minmax(0,1fr))}
@media (min-width:640px){ /* sm */
  .sm\:grid-cols-3{grid-template-columns:repeat(3,minmax(0,1fr))}
}
@media (min-width:768px){ /* md */
  .md\:items-center{align-items:center}
  .md\:max-w-2xl{max-width:42rem}
  .md\:rounded-2xl{border-radius:1rem}
  .md\:flex{display:flex}
}
@media (min-width:1024px){ /* lg */
  .lg\:grid-cols-4{grid-template-columns:repeat(4,minmax(0,1fr))}
  .lg\:hidden{display:none}
  .lg\:block{display:block}
  .w-380{width:380px}
}

/* Header – sticky + blur benzeri */
.sticky{position:sticky}
.top-0{top:0}
.z-40{z-index:40}
.bg-white\/80{background:rgba(255,255,255,.8)}
.backdrop-blur{backdrop-filter:saturate(180%) blur(8px)}

/* Spacing helpers (kullanılanlar) */
.-mb-px{margin-bottom:-1px}

/* Ring (Premium avatar) */
.ring-4{box-shadow:0 0 0 4px var(--yellow-500) inset}
.ring-yellow-500{box-shadow:0 0 0 4px var(--yellow-500) inset}

/* Buttons */
button,.btn, .linkbtn{
  appearance:none;cursor:pointer;border:1px solid var(--gray-300);
  background:var(--white);color:var(--text);border-radius:.5rem;
  padding:.5rem .75rem;transition:all .15s ease;
}
button:hover,.btn:hover,.linkbtn:hover{background:var(--gray-50)}
button:active{transform:scale(.98)}
/* Amber button */
.btn-amber,.bg-amber-600.text-white{
  background:var(--amber-600);color:#fff;border-color:transparent
}
.btn-amber:hover{background:var(--amber-700)}
.disabled{opacity:.5;pointer-events:none}

/* Inputs */
input[type="text"],input[type="search"],input[type="file"],select,textarea,.input{
  width:100%;border:1px solid var(--gray-300);border-radius:.5rem;
  padding:.5rem .75rem;background:#fff;font:inherit;color:inherit
}
input::placeholder{color:var(--gray-400)}

/* Badge */
.badge{display:inline-block;padding:.125rem .5rem;border-radius:9999px;font-size:.75rem;font-weight:500}
.badge-gray{background:var(--gray-100);color:var(--gray-700)}
.badge-gold{background:var(--amber-100);color:#854d0e;border:1px solid #fde68a}
.badge-green{background:var(--green-100);color:#065f46;border:1px solid #a7f3d0}

/* Aspect 4/3 kapsayıcı */
.aspect-\[4\/3\]{position:relative;width:100%;padding-top:75%;background:var(--gray-100)}
.aspect-\[4\/3\] > img, .aspect-\[4\/3\] > picture, .aspect-\[4\/3\] > video{
  position:absolute;inset:0;width:100%;height:100%;object-fit:cover
}

/* Hover scale küçük efekt */
.group:hover .group-hover\:scale-\[1\.02\]{transform:scale(1.02);transition:transform .2s ease}

/* Footer (siyah panel) */
footer.bg-black{color:#e5e7eb}
footer a{color:#e5e7eb}
footer a:hover{color:#fff}

/* Alt bar (mobil) */
.fixed{position:fixed}
.bottom-0{bottom:0}
.left-0{left:0}
.right-0{right:0}

/* Modallar */
.modal-backdrop{position:fixed;inset:0;background:rgba(0,0,0,.4);z-index:60;display:flex;align-items:flex-end}
@media (min-width:768px){.modal-backdrop{align-items:center;justify-content:center}}
.modal-card{background:#fff;border-radius:1rem;box-shadow:0 20px 40px rgba(0,0,0,.15);width:100%}
@media (min-width:768px){.modal-card{max-width:42rem}}

/* Kart */
.card{background:#fff;border:1px solid var(--border);border-radius:.75rem;box-shadow:0 1px 2px rgba(0,0,0,.04);overflow:hidden}

/* Link/Buton görünümleri */
.border-amber-300{border-color:var(--amber-300)}
.text-amber-800{color:#92400e}
.hover\:bg-amber-50:hover{background:#fffbeb}
.hover\:bg-gray-50:hover{background:var(--gray-50)}
.hover\:text-gray-800:hover{color:var(--gray-800)}
.hover\:text-amber-800:hover{color:var(--amber-700)}

/* Layout yardımcıları */
.w-28{width:7rem}.h-28{height:7rem}
.overflow-hidden{overflow:hidden}
.object-cover{object-fit:cover}

/* Z-index & overlay */
.z-\[60\]{z-index:60}

/* Basit containers */
header .max-w-7xl, section .max-w-7xl, footer .max-w-7xl, nav .max-w-7xl{max-width:80rem;margin:0 auto}
